{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "test-region": {
            "description": {
                "$ref": "#/messages/deploy.region"
            },
            "type": "string",
            "validator": {
                "v-type": "cf-region",
                "params": ["api-key"]
            }
        },
        "test-organization": {
            "description": {
                "$ref": "#/messages/deploy.org"
            },
            "type": "string",
            "validator": {
                "v-type": "cf-org",
                "params": ["test-region"]
            }
        },
        "test-space": {
            "description": {
                "$ref": "#/messages/deploy.space"
            },
            "type": "string",
            "validator": {
                "v-type": "cf-space",
                "params": ["test-organization"]
            }
        },
        "prod-region": {
            "description": {
                "$ref": "#/messages/deploy.region"
            },
            "type": "string",
            "validator": {
                "v-type": "cf-region",
                "params": ["api-key"]
            }
        },
        "prod-organization": {
            "description": {
                "$ref": "#/messages/deploy.org"
            },
            "type": "string",
            "validator": {
                "v-type": "cf-org",
                "params": ["prod-region"]
            }
        },
        "prod-space": {
            "description": {
                "$ref": "#/messages/deploy.space"
            },
            "type": "string",
            "validator": {
                "v-type": "cf-space",
                "params": ["prod-organization"]
            }
        },
        "api-key": {
            "description": {
                "$ref": "#/messages/deploy.apiKeyDescription"
            },
            "type": "string",
            "validator": {
                "v-type": "api-key"
            }
        },
        "app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "maxLength": 63
        }
    },
    "required": ["test-region", "test-organization", "test-space", "prod-region", "prod-organization", "prod-space", "app-name", "api-key"],
    "form": [{
            "type": "validator",
            "url": "/devops/validator/validator-v1.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.appName"
            },
            "key": "app-name"
        },
        {
            "type": "password",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.apiKeyTitle"
            },
            "key": "api-key"
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": ["15%", "28%", "28%", "28%"],
            "items": [{
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/organization"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/space"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/testStage"
                    }
                },
                {
                    "type": "select",
                    "key": "test-region"
                },
                {
                    "type": "select",
                    "key": "test-organization"
                },
                {
                    "type": "select",
                    "key": "test-space",
                    "readonly": false
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/prodStage"
                    }
                },
                {
                    "type": "select",
                    "key": "prod-region"
                },
                {
                    "type": "select",
                    "key": "prod-organization"
                },
                {
                    "type": "select",
                    "key": "prod-space",
                    "readonly": false
                }
            ]
        }
    ]
}